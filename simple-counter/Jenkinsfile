pipeline {
    agent any

    environment {
        AZURE_CREDENTIALS_ID = 'your-azure-credentials-id'
        APP_NAME = 'your-app-service-name'
        RESOURCE_GROUP = 'your-resource-group'
    }

    stages {
        stage('Build') {  /* Build Stage */
            steps {
                script {
                    // Navigate to the simple-counter directory
                    dir('simple-counter') {
                        bat 'npm install'    // Run npm install from within the simple-counter directory
                        bat 'npm run build'  // Build the React app
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    dir('simple-counter'){
                        bat 'npm run test' // Run tests using Jest
                    }
                }
            }
        }

        stage('Code Quality Analysis') {
            steps {
                script {
                    dir('simple-counter') {
                        bat 'npm run lint'
                    }
                }
            }
        }

        stage('Deploy') { /* Deployment Stage */
            steps {
                script {
                    // Assuming the Dockerfile and docker-compose.yml are in the root of simple-counter
                    dir('simple-counter') {
                        bat 'docker compose -d --build' // Build and run the containers
                    }
                }
            }
        }
    }
}
