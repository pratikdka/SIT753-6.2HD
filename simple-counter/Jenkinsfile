pipeline {
    agent any

    environment {
        // The credentialsId is the ID user sets when adding the credential
        HEROKU_API_KEY = credentials('heroku-api-key')
    }

    stages {
        stage('Build') {  /* Build Stage */
            steps {
                script {
                    // Navigate to the simple-counter directory
                    dir('simple-counter') {
                        bat 'npm install'    // Run npm install from within the simple-counter directory
                        bat 'npm run build'  // Build the React app
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    dir('simple-counter'){
                        bat 'npm run test' // Run tests using Jest
                    }
                }
            }
        }

        stage('Code Quality Analysis') {
            steps {
                script {
                    dir('simple-counter') {
                        bat 'npm run lint'
                    }
                }
            }
        }

        stage('Deploy') { /* Deployment Stage */
            steps {
                script {
                    dir('simple-counter'){
                        bat 'heroku authorizations:create --description "Jenkins deployment"'
                        bat 'git push heroku main'
                    }
                }
            }
        }
    }
}
