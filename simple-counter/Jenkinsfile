pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    // Navigate to the simple-counter directory
                    dir('simple-counter') {
                        // Run npm install from within the simple-counter directory
                        bat 'npm install'
                        // Build the React app
                        bat 'npm run build'
                    }
                }
            }
        }
    }
}
