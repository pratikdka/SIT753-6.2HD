pipeline {
    agent any

    stages {
        stage('Build') {  /* Build Stage */
            steps {
                script {
                    // Navigate to the simple-counter directory
                    dir('simple-counter') {
                        bat 'npm install'    // Run npm install from within the simple-counter directory
                        bat 'npm run build'  // Build the React app
                        bat 'npm install netlify-cli -g'
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    dir('simple-counter'){
                        bat 'npm run test' // Run tests using Jest
                    }
                }
            }
        }

        stage('Code Quality Analysis') {
            steps {
                script {
                    dir('simple-counter') {
                        bat 'npm run lint'
                    }
                }
            }
        }

        stage('Deploy to EC2') {
            steps {
                script {
                    // Assuming your EC2 instance uses 'ec2-user' and you have set up the destination directory
                    sshagent(['sit753-key-ec2']) {
                        bat "scp -r ./simple-counter/build ec2-user@13.55.227.172:/home/ec2-user/my-app"
                        bat "ssh ec2-user@13.55.227.172 'sudo systemctl restart nginx'"
                    }
                }
            }
        }
    }
}
