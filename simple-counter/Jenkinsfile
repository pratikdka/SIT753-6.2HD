pipeline {
    agent any

    stages {
        stage('Build') {  /* Build Stage */
            steps {
                script {
                    // Navigate to the simple-counter directory
                    dir('simple-counter') {
                        bat 'npm install'    // Run npm install from within the simple-counter directory
                        bat 'npm run build'  // Build the React app
                        bat 'npm install netlify-cli -g'
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    dir('simple-counter'){
                        bat 'npm run test' // Run tests using Jest
                    }
                }
            }
        }

        stage('Code Quality Analysis') {
            steps {
                script {
                    dir('simple-counter') {
                        bat 'npm run lint'
                    }
                }
            }
        }

        stages {
            stage('Deploy to EC2') {
                steps {
                    script {
                        sshagent(credentials: ['sit753-key-ec2']) {
                            sh "scp -r ./simple-counter/build ec2-user@13.55.227.172:/path/to/deployment/location"
                            sh "ssh ec2-user@13.55.227.172 'sudo systemctl restart nginx'"
                        }
                    }
                }
            }
        }
    }
}
